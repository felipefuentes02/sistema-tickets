{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "incremental": false,
    "removeComments": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "coverage",
    "test",
    "**/*spec.ts",
    "**/*test.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts",
    "jest.config.js",
    "prisma/seed.ts"
  ]
}